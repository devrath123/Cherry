<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="cherry.android.com.cherry.CustomerInfoActivity">


    <include
        android:id="@+id/customerInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/app_header"
        />

    <TextView
        android:id="@+id/singleLineTextView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/customerInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerNameLinearLayout"
        android:layout_below="@+id/singleLineTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/customerNameTextView"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Customer Name"
            android:layout_weight="0.4"/>

        <EditText
            android:id="@+id/customerNameEditText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/singleLineTextView"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:maxLength="25"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:id="@+id/secondLineTextView"
        android:layout_below="@+id/customerNameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerCountryLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLineTextView"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customerCountryTextView"
            android:textSize="15sp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Country"/>

        <Spinner
            android:id="@+id/customerCountrySpinner"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:id="@+id/thirdLineTextView"
        android:layout_below="@+id/customerCountryLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerStateProvinceLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdLineTextView"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customerStateProvinceTextView"
            android:textSize="15sp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="State/Province"/>

        <EditText
            android:id="@+id/customerStateProvinceEditText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:maxLength="30"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/fiveLineTextView"
        android:layout_below="@+id/customerLicenseLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerVINLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fiveLineTextView"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customerVINTextView"
            android:textSize="15sp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="VIN"/>

        <EditText
            android:id="@+id/customerVINEditText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:maxLength="17"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/fourthLineTextView"
        android:layout_below="@+id/customerStateProvinceLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerLicenseLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthLineTextView"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customerLicenseTextView"
            android:textSize="15sp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="License"/>

        <EditText
            android:id="@+id/customerLicenseEditText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:maxLength="25"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/seventhLineTextView"
        android:layout_below="@+id/customerProcedureLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerYearLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seventhLineTextView"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customerYearTextView"
            android:textSize="15sp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Year"/>

        <EditText
            android:id="@+id/customerYearEditText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:maxLength="4"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sixthLineTextView"
        android:layout_below="@+id/customerVINLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerProcedureLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sixthLineTextView"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customerProcedureTextView"
            android:textSize="15sp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Procedure"/>

        <Spinner
            android:id="@+id/customerProcedureSpinner"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:paddingLeft="0dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/eightLineTextView"
        android:layout_below="@+id/customerYearLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerMakeIdLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eightLineTextView"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customerMakeIdTextView"
            android:textSize="15sp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Make ID"/>

        <EditText
            android:id="@+id/customerMakeIdEditText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:maxLength="25"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/nineLineTextView"
        android:layout_below="@+id/customerMakeIdLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

    <LinearLayout
        android:id="@+id/customerModelIdLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nineLineTextView"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/customerModelIdTextView"
            android:textSize="15sp"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Model ID"/>

        <EditText
            android:id="@+id/customerModelIdEditText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:maxLength="25"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tenthLineTextView"
        android:layout_below="@+id/customerModelIdLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_light_grey"/>

</RelativeLayout>
